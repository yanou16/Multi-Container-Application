version: '3'

services:
  api:
    build:
      context: .  # Utiliser le répertoire courant au lieu de todo-api
    ports:
      - "3000:3000"
    environment:
      - MONGODB_URI=mongodb://mongodb:27017/todos
    volumes:
      - .:/app  # Monter le répertoire courant dans /app
    depends_on:
      - mongodb

  mongodb:
    image: mongo:4.4
    ports:
      - "27017:27017"
    volumes:
      - mongodb_data:/data/db

volumes:
  mongodb_data: